<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Registro_Usuario"
    android:orientation="vertical"
    android:gravity="center|top">

    <Space android:layout_width="40dp"
        android:layout_height="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/rut_guardar" android:hint="rut"/>
    <EditText
        android:id="@+id/nueo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"

        tools:layout_editor_absoluteY="152dp"
        tools:layout_editor_absoluteX="89dp"

        android:hint="nuevo usuario"
        style="@style/Widget.AppCompat.EditText"/>
    <EditText
        android:id="@+id/nueeva_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        tools:layout_editor_absoluteY="242dp"
        tools:layout_editor_absoluteX="88dp"

        android:hint="nueva contrasena"/>
    <Button
        android:text="@string/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guardar_cuenta_nueva"
        style="@style/boton"
        />

</LinearLayout>